{
    "name": "vectorface/gearman",
    "type": "library",
    "description": "Gearman (http://www.danga.com/gearman) is a system to farm out work to other machines. It can load balance function calls to lots of machines and allows you to call functions between languages. It can also run all function calls in parallel.",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Till Klampaeckel",
            "homepage": "http://pear.php.net/user/till"
        },
        {
            "name": "Brian L. Moon",
            "homepage": "http://pear.php.net/user/brianlmoon"
        },
        {
            "name": "Joe Stump",
            "homepage": "http://pear.php.net/user/jstump"
        },
        {
            "name": "Chris Goffinet",
            "homepage": "http://pear.php.net/user/lenn0x"
        },
        {
            "name": "Martin Hlavac",
            "homepage": "http://www.mhlavac.net"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-sockets": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.18",
        "friendsofphp/php-cs-fixer": "^v3.59.3",
        "symfony/process": "^v5.0.0"
    },
    "autoload": {
        "psr-4": { "Vectorface\\Gearman\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Vectorface\\Gearman\\tests\\": "tests/" }
    },
    "scripts": {
        "test": [
            "@test-unit"
        ],
        "test-unit": "phpunit --color=always"
    }
}
